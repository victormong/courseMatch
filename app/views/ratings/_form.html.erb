<div class="container">
<%= form_for([@course, @rating]) do |f| %>
  <% if @rating.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rating.errors.count, "error") %> prohibited this rating from being saved:</h2>

      <ul>
      <% @rating.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field form-group">
    <div class="create-rating">
    </div>
  
<br>

  <div class="field form-group">
    <%= f.label :review %><br>
    <%= f.text_area :review ,class: "form-control" %>
  </div>
  
  <div class="actions">
    <%= f.submit "Submit Review", class: "btn btn-lg btn-primary" %>
  </div>
</div>
<% end %>
</div>
<script type="text/javascript">
$('.create-rating').raty({
  path: '/assets',
  scoreName: 'rating[rate]'
});
</script>